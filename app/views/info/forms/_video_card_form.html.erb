<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title">
            <a data-toggle="collapse" data-parent="#accordion" href="#video_detail">
                <span class="text-warning">
                    Video Card
                </span>
            </a>
        </h4>
    </div>
    <div id="video_detail" class="panel-collapse collapse">
        <div class="panel-body">
        <% @vcard.each do |vc| %>
            <%= form_for vc, url: {action: "hardware"} do |b| %>
                <div class="row">
                    <div class="form-group col-sm-4">
                        <%= label_tag :"Description" %>    
                        <%= b.text_field :video_description, disabled: true %>
                    </div>
                    <div class="form-group col-sm-4">
                        <%= label_tag :"Manufacturer" %>    
                        <%= b.text_field :video_manufacturer, disabled: true %>
                    </div>
                    <div class="form-group col-sm-4">
                        <%= label_tag :"Memory" %>    
                        <%= b.text_field :video_memory, disabled: true %>
                    </div>
                </div>
            <% end %>
        <% end %>
        </div>
    </div>
</div>