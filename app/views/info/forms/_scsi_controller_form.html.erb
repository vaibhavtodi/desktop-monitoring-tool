<div class="panel panel-default">
    <div class="panel-heading">
        <h4 class="panel-title">
            <a data-toggle="collapse" data-parent="#accordion" href="#scsi_detail">
                <span class="text-warning">
                    SCSI Controller
                </span>
            </a>
        </h4>
    </div>
    <div id="scsi_detail" class="panel-collapse collapse">
        <div class="panel-body">
        <% @scsi_c.each do |sc| %>
            <%= form_for sc, url: {action: "hardware"} do |b| %>
                <div class="row">
                    <div class="form-group col-sm-4">
                        <%= label_tag :"Name" %>    
                        <%= b.text_field :name, disabled: true %>
                    </div>
                    <div class="form-group col-sm-4">
                        <%= label_tag :"Manufacturer" %>    
                        <%= b.text_field :manufacturer, disabled: true %>
                    </div>
                    <div class="form-group col-sm-4">
                        <%= label_tag :"Device ID" %>    
                        <%= b.text_field :device_id, disabled: true %>
                    </div>
                    <div class="form-group col-sm-4">
                        <%= label_tag :"Type" %>    
                        <%= b.text_field :type, disabled: true %>
                    </div>
                </div>
            <% end %>
        <% end %>
        </div>
    </div>
</div>