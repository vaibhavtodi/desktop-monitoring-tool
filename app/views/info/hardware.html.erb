	<div class="row">
		<div class="col-lg-10">
	        <%= render 'info/forms/bios_form' %>
		</div>
	</div>

	<div class="row">
		<div class="col-lg-10">
	        <%= render 'info/forms/processor_form' %>
		</div>
	</div>

	<div class="row">
		<div class="col-lg-10">
	        <%= render 'info/forms/hard_disk_form' %>
		</div>
	</div>

	<div class="row">
		<div class="col-lg-10">
	        <%= render 'info/forms/partition_form' %>
		</div>
	</div>

	<div class="row">
		<div class="col-lg-10">
	        <%= render 'info/forms/network_card_form' %>
		</div>
	</div>

	<div class="row">
		<div class="col-lg-10">
	        <%= render 'info/forms/video_card_form' %>
