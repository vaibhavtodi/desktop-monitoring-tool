		        <%= render 'info/forms/mother_board_form' %>
			</div>
		</div>

		<div class="row">
			<div class="col-lg-10">
		        <%= render 'info/forms/memory_form' %>
			</div>
		</div>

		<div class="row">
			<div class="col-lg-10">
		        <%= render 'info/forms/optical_drive_form' %>
			</div>
		</div>

