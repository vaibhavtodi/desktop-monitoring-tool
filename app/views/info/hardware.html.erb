			<div class="col-lg-10">
		        <%= render 'info/forms/modem_form' %>
			</div>
		</div>

		<div class="row">
			<div class="col-lg-10">
		        <%= render 'info/forms/monitor_form' %>
			</div>
		</div>
	</div>
<% end %>


<% if $sys.os_group == "Linux" then %>
	<div class="container">
		<div class="row">
			<div class="col-lg-10">
		        <%= render 'info/forms/pagefile_form' %>
			</div>
		</div>

		<div class="row">
			<div class="col-lg-10">
		        <%= render 'info/forms/ip_address_form' %>
